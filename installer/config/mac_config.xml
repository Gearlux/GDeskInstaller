<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <Name>GDeskTunes</Name>
    <Version>0.3</Version>
    <Title>GDeskTunes Installer</Title>
    <Publisher>Gearlux</Publisher>
    <ProductUrl>http://gearlux.github.io/GDeskTunes/</ProductUrl>
    <StartMenuDir>GDeskTunes</StartMenuDir>
    <!--
    <Logo>logo.png</Logo>
    <Watermark>watermark.png</Watermark>
    -->
    <Background>background.png</Background>
    <RepositorySettingsPageVisible>false</RepositorySettingsPageVisible>
    <TargetDir>@HomeDir@/Applications/GDeskTunes</TargetDir>
    <AdminTargetDir>@ApplicationsDir@/GDeskTunes</AdminTargetDir>
    <AllowNonAsciiCharacters>true</AllowNonAsciiCharacters>
    <RunProgram>open</RunProgram>
    <RunProgramArguments>@TargetDir@/GDeskTunes.app</RunProgramArguments>
	<UninstallerName>GDeskMaintenance</UninstallerName>
